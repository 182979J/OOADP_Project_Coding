<link rel="stylesheet" href="/css/firstCSS.css" type="type/css">
<style>
    *{
    margin:0;
    padding:0;
    box-sizing: border-box;
    outline: none;
    font-family: 'Roboto', sans-serif;
}

.wrapper
{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50%;
    height:200px;
    padding: 0 20px;
    margin-left: 290px;
    margin-bottom: 200px;
    
    
}
.item-form
{
    max-width: 550px;
    margin: 0 auto;
    background-color: rgb(244, 182, 66);
    padding: 30px;
    border-radius: 5px;
    display: flex;
    box-shadow: 0 0 10px rgba(0,0,0,0.13);

  
}

.input-fields
{
    display: flex;
    flex-direction: column;
    margin-right: 4%;

}

.input-fields,
.descr
{
    width: 48%;

}

.input-fields .input,
.descr textarea
{
    margin: 10px 0;
    background: transparent;
    border: 0;
    border-bottom: 2px solid whitesmoke;
    padding: 10px;
    color:whitesmoke;
    width: 100%;
}
.descr textarea
{
    height: 212px;

}

::-webkit-input-placeholder
{
    color white;
}

::-moz-input-placeholder
{
    color:white;
}

::-ms-input-placeholder
{
    color:white;
}

.btn
{
    background:rgb(244, 182, 66);
    text-align: center;
    padding: 15px;
    border-radius: 5px;
    color: #fff;
    cursor: pointer;
    text-transform: uppercase;

}

@media screen and (max-width: 600px)
{
    .item-form
    {
        flex: column;
    }
    .descr textarea
    {
        height: 80px;
    }
    .input-fields
    { width:100%;
    }
}

</style>
<div class="wrapper">
	<div class="item-form">
		<form action="../form/sendForm" method="post" id="sendForm">
		<div class="input-fields">
			<input type="text" class="input" id="itemCode" name="itemCode" value="{{itemCode}}" placeholder="Item Code">
			<input type="text" class="input" id="quantity" name="quantity" value="{{description}}" placeholder="Quantity">
			<input type="text" class="input" id="referenceNo" name="referenceNo" value="{{quantity}}"placeholder="Reference Number">
			
			<input id="datepicker" width="200"  value="{{dateofDelivery}}" readonly />
		</div>
		<div class="descr">
			<textarea id="description" name="description"placeholder="Description">{{Description}}</textarea>
			<button class="btn">Send</button>
		</div>
        </form>
	</div>
</div>


<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		value: new Date().toLocaleDateString('en-SG'),
		uiLibrary: 'bootstrap4',
	});
</script>